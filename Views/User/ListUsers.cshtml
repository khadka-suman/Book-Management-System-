@using Microsoft.AspNetCore.Identity
@using Book.Areas.Identity.Data
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All User";
}
<h1>All User</h1>

@if(Model.Any())
{
    <!----<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateUser"
    asp-asp-controller="Register">Add new User</a>-->

    foreach(var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id:@user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                  First Name :  @user.firstname
                </h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                 Last Name :  @user.lastname
                </h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                  Email :  @user.Email
                </h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                  Address :  @user.address
                </h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                 Age :  @user.age
                </h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditUser"
                    asp-controller="User" asp-route-id="@user.Id">Edit
                </a>
                </form>
            
                <br>
                    <span id="confirmDeleteSpan_@user.Id"  >
                    <button type="submit" class="btn btn-danger">Delete</button>
             <a href="#" class="btn btn-primary"
                    onclick="confirmDelete('@user.Id',true)">Yes</a> 
                </span>
                <span id="deleteSpan_@user.Id">
                    <a href="#" class="btn btn-danger"
                    onclick="confirmDelete('@user.Id',true)">No</a>
                </span>
               
            </div>
        </div>
    }
}    
