@using Book.ViewModels
@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2" col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" >
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="firstname" class="form-control">
            <div class="col-sm-10">
                <label asp-for="firstname" class="col-sm-2" col-form-label"></label>
                <input asp-for="firstname" class="form-control" >
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>
            </label>
            <label asp-for="lastname" class="form-control">
            <div class="col-sm-10">
                <label asp-for="lastname" class="col-sm-2" col-form-label"></label>
                <input asp-for="lastname" class="form-control" >
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
            </label>
            <label asp-for="address" class="form-control">
            <div class="col-sm-10">
                <label asp-for="address" class="col-sm-2" col-form-label"></label>
                <input asp-for="address" class="form-control" >
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            </label>
             <label asp-for="age" class="form-control">
            <div class="col-sm-10">
                <label asp-for="age" class="col-sm-2" col-form-label"></label>
                <input asp-for="age" class="form-control" >
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            </label>
        <label asp-for="Email" class="form-control">
            <div class="col-sm-10">
                <label asp-for="Email" class="col-sm-2" col-form-label"></label>
                <input asp-for="Email" class="form-control" >
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </label>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User Role</h3>
        </div>
        <div class="card-body">
            @if(Model.Roles.Any())
            {
                foreach(var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>

</form>
